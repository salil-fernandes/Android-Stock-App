<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
    </style>
    <style name="ColumnHeaderStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:background">@drawable/header_cell_table_border</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textColor">@color/colorHeaderText</item>
    </style>

    <style name="ColumnTextStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:background">@drawable/normal_cell_table_border</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">5dp</item>
    </style>
</resources>